{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": ["ANTHROPIC_API_KEY", "OPENAI_API_KEY", "MCP_ENDPOINT_LOCALDEV_URL", "MCP_ENDPOINT_LOCALDEV_NAMESPACE"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false,
      "env": ["ANTHROPIC_API_KEY"]
    },
    "clean": {
      "cache": false
    }
  }
}
