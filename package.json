{
  "name": "use-ai-monorepo",
  "version": "0.1.1",
  "license": "BUSL-1.1",
  "author": {
    "name": "Zachary Davison",
    "url": "https://github.com/mm-zacharydavison"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meetsmore/use-ai.git"
  },
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "overrides": {
    "cpu-features": "npm:empty-module@^1.0.0"
  },
  "scripts": {
    "postinstall": "./scripts/setup-env.sh",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "cd apps/example && bun run test:e2e:ui",
    "test:e2e:headed": "cd apps/example && bun run test:e2e:headed",
    "test:e2e:debug": "cd apps/example && bun run test:e2e:debug",
    "test:e2e:react-16": "cd apps/example && bun run test:e2e:react-16",
    "clean": "turbo run clean && rm -rf .cache/turbo",
    "kill": "(lsof -ti:3000 2>/dev/null | xargs -r kill; lsof -ti:3002 2>/dev/null | xargs -r kill; lsof -ti:8081 2>/dev/null | xargs -r kill) && echo 'Killed processes on ports 3000, 3002, 8081' || echo 'No processes to kill'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3"
  }
}
